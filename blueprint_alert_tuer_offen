      entity_id: !input camera_entity
    data:
      filename: "{{ snapshot_file }}"

  # 2Ô∏è‚É£ Kurze Verz√∂gerung, damit Snapshot geschrieben wird
  - delay: "00:00:03"

  # 3Ô∏è‚É£ Hue Lampen optional auf Rot
